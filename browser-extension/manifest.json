{
  "manifest_version": 3,
  "name": "Clothing Price Tracker",
  "version": "1.0.0",
  "description": "Track clothing prices across Myntra, Flipkart, Ajio, and Tata Cliq. Get notified when prices drop!",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.myntra.com/*",
    "https://*.flipkart.com/*",
    "https://*.ajio.com/*",
    "https://*.tatacliq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.myntra.com/*",
        "https://*.flipkart.com/*",
        "https://*.ajio.com/*",
        "https://*.tatacliq.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
